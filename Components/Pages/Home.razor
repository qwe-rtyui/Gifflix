@page "/"

@using Gifflix.Models
@inject MovieService MovieService

<PageTitle>Home</PageTitle>

<div class="home-page">
    <!-- Banner principal com detalhes da série/filme em destaque -->
    <div class="banner">
        <Banner />
    </div>

    <!-- Seção "Popular on Gifflix" -->
    <div class="popular-section">
        <h2>Popular on Gifflix</h2>
        <Popular PopularMovies="@popularMovies" />
    </div>

    <!-- Seção "Item on Gifflix" -->
    <div class="item-section">
        <h2>Popular on Gifflix</h2>
        <div class="items">
            @for (int i = 0; i < 15; i++)
            {
                <div class="item">
                    <img src="/images/fubuki.png" alt="Lorem Ipsum">
                    <div class="menu">
                        <div class="items-menu">
                            <span class="ico play"><ion-icon name="play"></ion-icon></span>
                            <span class="ico star"><ion-icon name="star"></ion-icon></span>
                            <span class="ico thumbs-up"><ion-icon name="thumbs-up"></ion-icon></span>
                            <span class="ico thumbs-down"><ion-icon name="thumbs-down"></ion-icon></span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="item-section">
        <h2>Popular on Gifflix</h2>
        <Item />
    </div> 
    <div class="item-section">
        <h2>Popular on Gifflix</h2>
        <div class="items">
            @for (int i = 0; i < 15; i++)
            {
                <div class="item">
                    <img src="/images/yu.jpg" alt="Lorem Ipsum">
                    <div class="menu">
                        <div class="items-menu">
                            <span class="ico play"><ion-icon name="play"></ion-icon></span>
                            <span class="ico star"><ion-icon name="star"></ion-icon></span>
                            <span class="ico thumbs-up"><ion-icon name="thumbs-up"></ion-icon></span>
                            <span class="ico thumbs-down"><ion-icon name="thumbs-down"></ion-icon></span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="item-section">
        <h2>Popular on Gifflix</h2>
        <div class="items">
            @for (int i = 0; i < 15; i++)
            {
                <div class="item">
                    <img src="/images/tensei.jpg" alt="Lorem Ipsum">
                    <div class="menu">
                        <div class="items-menu">
                            <span class="ico play"><ion-icon name="play"></ion-icon></span>
                            <span class="ico star"><ion-icon name="star"></ion-icon></span>
                            <span class="ico thumbs-up"><ion-icon name="thumbs-up"></ion-icon></span>
                            <span class="ico thumbs-down"><ion-icon name="thumbs-down"></ion-icon></span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div style="margin-bottom:100px"></div>
</div>

<style>
    .movies {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .movie {
        width: 200px;
        text-align: center;
    }

        .movie img {
            width: 100%;
            border-radius: 8px;
        }

</style>

@if (popularMovies == null)
{
    <p>Loading...</p>
}
else
{
    <div class="movies">
        @foreach (var movie in popularMovies.Results)
        {
            <div class="movie">
                <img src="@movie.FullPosterPath" alt="@movie.Title" />
                <h4>@movie.Title</h4>
                <p>@movie.Overview</p>
            </div>
        }
    </div>
}

@code {
    private MovieResponse popularMovies;

    protected override async Task OnInitializedAsync()
    {
        popularMovies = await MovieService.GetPopularMoviesAsync("movie/popular?language=pt-BR&page=2");
    }

}