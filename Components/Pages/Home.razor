@page "/"

<PageTitle>Home</PageTitle>

<div class="home-page">
    <!-- Banner principal com detalhes da série/filme em destaque -->
    <div class="banner">
        <div class="banner-content">
            <div class="badge">N SERIES</div>
            <h1 class="title">Lorem Ipsum</h1>
            <p class="description">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ac enim eget elit ullamcorper convallis.
            </p>
            <div class="buttons">
                <button class="play-button">▶ Play</button>
                <button class="my-list-button">+ My List</button>
            </div>
        </div>
    </div>

    <!-- Seção "Popular on Gifflix" -->
    <div class="popular-section">
        <h2>Popular on Gifflix</h2>
        <div class="popular-items">
            @for (int i = 0; i < 18; i++)
            {
                <div class="popular-item">
                    <img src="/images/mona.jpg" alt="Lorem Ipsum">
                    <p>Lorem Ipsum</p>
                </div>
            }
        </div>
    </div>

    <!-- Seção "Item on Gifflix" -->
    <div class="item-section">
        <h2>Popular on Gifflix</h2>
        <div class="items">
            @for (int i = 0; i < 15; i++)
            {
                <div class="item">
                    <img src="/images/fubuki.png" alt="Lorem Ipsum">
                    <div class="menu">
                        <div class="items-menu">
                            <span class="ico play"><ion-icon name="play"></ion-icon></span>
                            <span class="ico star"><ion-icon name="star"></ion-icon></span>
                            <span class="ico thumbs-up"><ion-icon name="thumbs-up"></ion-icon></span>
                            <span class="ico thumbs-down"><ion-icon name="thumbs-down"></ion-icon></span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div style="margin-bottom:100px"></div>
</div>